# NGINX config fil. To be ln -s at /etc/nginx/sites-available/ & /etc/nginx/sites-enabled/

upstream backend {
    server 172.31.16.209:8000 weight=2;
    server 172.31.16.210:8000 weight=2;
    server 172.31.16.211:8000 weight=2;
    server 127.0.0.1:8000 weight=1;
}

server {
    listen 80;
    server_name 192.168.0.2; 

    #access_log /vagrant/nginx_access.log;
    #error_log /vagrant/nginx_error.log;

    location / {
        include proxy_params;
        proxy_pass http://backend;
        proxy_set_header   Host             $host;
        proxy_set_header   X-Real-IP        $remote_addr;
        proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
    }

    location /api/ {
        include proxy_params;
        proxy_pass http://backend/api/;

    }
}
